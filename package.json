{
    "name": "exploreext",
    "displayName": "exploreExt",
    "description": "advanced Explorer",
    "version": "0.0.1",
    "publisher": "RoyAmmerschuber",
    "engines": {
        "vscode": "^1.25.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:explorer-ext"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands":[{
            "command": "explorerExt.openFile",
            "title": "open file"
        }],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "explorer-ext",
                    "title": "ExplorerExt",
                    "icon": "media/exp.svg"
                }
            ]
        },
        "views": {
            "explorer-ext": [
                {
                    "id":"explorer-ext",
                    "name": "ExplorerExt"
                }
            ]
        },
        "configuration":[
            {
                "type":"object",
                "title": "ExplorerExt",
                "properties": {
                    "explorerExt.hideRules":{
                        "type":"object",
                        "default":{
                            "component.ts":["component.css","component.html","component.scss"],
                            "ts":["spec.ts"],
                            "scss":["css","css.map"]
                        }
                    },
                    "explorerExt.importQuickNav":{
                        "type":"boolean",
                        "default":false
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
